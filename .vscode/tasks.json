{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "git: pull on open",
      "type": "shell",
      "command": "git pull --ff-only",
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "panel": "shared",
        "showReuseMessage": false,
        "close": true
      },
      "runOptions": { "runOn": "folderOpen" }
    }
  ]
}
