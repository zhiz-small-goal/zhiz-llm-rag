{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/gate_report_v1.schema.json",
  "title": "Gate report schema v1",
  "$defs": {
    "finding": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "category",
        "severity",
        "loc",
        "fix",
        "owner",
        "status"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "severity": {
          "type": "string"
        },
        "loc": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "fix": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "owner": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "detail": {}
      }
    }
  },
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "generated_at",
    "tool",
    "root",
    "profile",
    "results",
    "summary"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "tool": {
      "type": "string"
    },
    "root": {
      "type": "string"
    },
    "profile": {
      "type": "string"
    },
    "ssot_path": {
      "type": "string"
    },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "status",
          "rc",
          "argv",
          "elapsed_ms"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "PASS",
              "FAIL",
              "ERROR",
              "SKIP"
            ]
          },
          "rc": {
            "type": "integer"
          },
          "argv": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "start_ts": {
            "type": "string",
            "format": "date-time"
          },
          "end_ts": {
            "type": "string",
            "format": "date-time"
          },
          "elapsed_ms": {
            "type": "integer",
            "minimum": 0
          },
          "log_path": {
            "type": "string"
          },
          "note": {
            "type": "string"
          },
          "findings": {
            "type": "array",
            "items": {
              "$ref": "#/$defs/finding"
            }
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "overall_status",
        "overall_rc",
        "counts"
      ],
      "properties": {
        "overall_status": {
          "type": "string",
          "enum": [
            "PASS",
            "FAIL",
            "ERROR"
          ]
        },
        "overall_rc": {
          "type": "integer",
          "enum": [
            0,
            2,
            3
          ]
        },
        "counts": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "pass",
            "fail",
            "error",
            "skip",
            "total"
          ],
          "properties": {
            "pass": {
              "type": "integer",
              "minimum": 0
            },
            "fail": {
              "type": "integer",
              "minimum": 0
            },
            "error": {
              "type": "integer",
              "minimum": 0
            },
            "skip": {
              "type": "integer",
              "minimum": 0
            },
            "total": {
              "type": "integer",
              "minimum": 0
            }
          }
        }
      }
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "detail": {}
        }
      }
    }
  }
}
