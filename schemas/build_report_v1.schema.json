{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/build_report_v1.schema.json",
  "title": "Build report base schema v1",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "schema_version",
    "step",
    "ts",
    "status",
    "inputs",
    "metrics",
    "errors"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "step": {
      "type": "string"
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string"
    },
    "inputs": {
      "type": "object"
    },
    "metrics": {
      "type": "object"
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "detail": {}
        }
      }
    }
  }
}
