{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Gate report (schema_version=2)",
  "type": "object",
  "required": [
    "schema_version",
    "generated_at",
    "tool",
    "root",
    "summary",
    "items"
  ],
  "additionalProperties": true,
  "properties": {
    "schema_version": {"type": "integer", "const": 2},
    "generated_at": {"type": "string"},
    "tool": {"type": "string"},
    "root": {"type": "string"},
    "summary": {
      "type": "object",
      "required": [
        "overall_status_label",
        "overall_rc",
        "max_severity_level",
        "counts",
        "total_items"
      ],
      "additionalProperties": true,
      "properties": {
        "overall_status_label": {"type": "string"},
        "overall_rc": {"type": "integer"},
        "max_severity_level": {"type": "integer"},
        "counts": {
          "type": "object",
          "additionalProperties": {"type": "integer"}
        },
        "total_items": {"type": "integer"}
      }
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["tool", "title", "status_label", "severity_level", "message"],
        "additionalProperties": true,
        "properties": {
          "tool": {"type": "string"},
          "title": {"type": "string"},
          "status_label": {"type": "string"},
          "severity_level": {"type": "integer"},
          "message": {"type": "string"},
          "loc": {
            "oneOf": [
              {"type": "string"},
              {"type": "array", "items": {"type": "string"}}
            ]
          },
          "loc_uri": {
            "oneOf": [
              {"type": "string"},
              {"type": "array", "items": {"type": "string"}}
            ]
          },
          "duration_ms": {"type": "integer"},
          "detail": {}
        }
      }
    },
    "data": {"type": "object", "additionalProperties": true}
  }
}
